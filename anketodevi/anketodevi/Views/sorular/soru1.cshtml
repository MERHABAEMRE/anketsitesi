        <button type="submit" id="kontrol" class="btn btn-success">SONRAKİ SORU</button>

    </div>
    <script>

        var secim = document.querySelector(".secim");

        function kontrolet1() {

            var x = secim.getAttribute("value")
            if (x == "true") {
                secim.removeAttribute("value")
                secim.setAttribute("value", "false");


            }
