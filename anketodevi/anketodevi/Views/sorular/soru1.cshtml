@model anketodevi.Models.Soru
@{
    ViewBag.Title = "soru1";
}


<form method="post" action="/sorular/soru2" class="form-group">

    <div class="form-group" style="margin-left:50px;">
        <h4>SORU 1</h4>
        <input type="text" name="Tanim" value="Edremit'in sevdiğiniz yemeklerini seçin" readonly style="width:500px;height:70px;color:white;background-color:black;border-radius:20px;text-align:center;">

